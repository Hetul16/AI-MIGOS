{
  "name": "realtime_adjuster",
  "displayName": "Realtime Adjuster Agent",
  "description": "Monitors weather and proposes/apply itinerary changes.",
  "version": "1.0.0",
  "url": "http://localhost:8100/a2a/realtime_adjuster",
  "authentication": { "type": "none" },
  "capabilities": { "streaming": false, "functions": true },
  "defaultInputModes": ["text"],
  "defaultOutputModes": ["text"],
  "type": "Agent",
  "tools": [
    { "name": "get_weather", "description": "GET /trips/{id}/weather", "inputs": { "id_token": "string", "itinerary_id": "string" }, "outputs": { "weather": "object" } },
    { "name": "apply_customizations", "description": "POST /trips/{id}/customize", "inputs": { "id_token": "string", "itinerary_id": "string", "actions": "object[]" }, "outputs": { "success": "bool" } }
  ],
  "skills": [
    { "id": "realtime_ops", "name": "Realtime Ops", "description": "Weather-aware itinerary adjustments." }
  ]
}

